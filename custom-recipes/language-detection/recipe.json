{
    "meta": {
        "label": "Language Detection",
        "description": "Recipe to detect the dominant language of a text",
        "icon": "icon-globe"
    },
    "kind": "PYTHON",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
            "description": "Dataset with text columns we want to get the language from",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output Dataset",
            "arity": "UNARY",
            "required": false,
            "acceptsDataset": true
        }
    ],
    "paramsPythonSetup": "get_language_list.py",
    "params": [
        {
            "name": "separator_input",
            "label": "Input Parameters",
            "type": "SEPARATOR"
        },
        {
            "name": "text_col_list",
            "label": "Text columns",
            "type": "COLUMNS",
            "description": "",
            "mandatory": true,
            "columnRole": "input_dataset",
            "allowedColumnTypes": [
                "string"
            ]
        },
        {
            "name": "separator_advanced",
            "label": "Advanced",
            "type": "SEPARATOR"
        },
        {
            "name": "expert",
            "label": "Expert",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "type": "MULTISELECT",
            "name": "constrained_languages",
            "label": "Restricted set of languages",
            "getChoicesFromPython": true,
            "visibilityCondition": "model.expert == true"
        },
        {
            "name": "output_upon_confidence",
            "label": "Output upon confidence",
            "description": "Compute language if confidence is above a given level",
            "type": "BOOLEAN",
            "defaultValue": false,
            "visibilityCondition": "model.expert == true"
        },
        {
            "type": "INT",
            "name": "confidence_level",
            "label": "Confidence Level",
            "minI": 0,
            "maxI": 100,
            "defaultValue": 95,
