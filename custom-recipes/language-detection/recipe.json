{
    "meta": {
        "label": "Language Detection",
        "description": "Recipe to detect the dominant language of a text",
        "icon": "icon-globe"
    },
    "kind": "PYTHON",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
            "description": "Dataset with text columns we want to get the language from",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output Dataset",
            "arity": "UNARY",
            "required": false,
            "acceptsDataset": true
        }
    ],
    "paramsPythonSetup": "get_language_list.py",
    "params": [
        {
            "name": "separator_input",
            "label": "Input Parameters",
            "type": "SEPARATOR"
        },
        {
            "name": "text_col_list",
            "label": "Text columns",
            "type": "COLUMNS",
            "description": "",
            "mandatory": true,
            "columnRole": "input_dataset",
            "allowedColumnTypes": [
                "string"
            ]
        },
        {
            "name": "separator_advanced",
            "label": "Advanced",
            "type": "SEPARATOR"
        },
        {
            "name": "expert",
            "label": "Expert",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "type": "MULTISELECT",
            "name": "constrained_languages",
            "label": "Restricted set of languages",
            "getChoicesFromPython": true,
            "visibilityCondition": "model.expert == true"
        },
        {
            "type": "INT",
            "name": "confidence_level",
            "label": "Confidence Level",
            "minI": 0,
            "maxI": 100,
            "defaultValue": 95,
            "visibilityCondition": "model.output_upon_confidence == true && model.expert == true"
        },
        {
            "type": "SELECT",
            "name": "fallback_output",
            "label": "Fallback Output",
            "getChoicesFromPython": true,
            "visibilityCondition": "model.expert == true"
        },
        {
            "type": "STRING",
            "name": "fallback_custom_value",
            "label": "Fallback Language Value",
            "defaultValue": "No Proper Language Detected",
            "visibilityCondition": "model.output_upon_confidence == true && model.fallback_language == 'custom' && model.expert == true"
        }
    ],
    "resourceKeys": []
}